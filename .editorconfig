# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,mdx}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single
spaces_around_operators = true

[*.{css}]
indent_size = 2
quote_type = single
